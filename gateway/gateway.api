syntax = "v1"

// 引入 web.api 文件
import "/api/web.api"

// web服务
@server (
	prefix: /web
	group:  web
)
service gateway-api {
	@doc "文章列表"
	@handler ArticleList
	get /article/list (ArticleListReq) returns (ArticleListResp)

	@doc "文章详情"
	@handler Article
	get /article/:id (ArticleReq) returns (ArticleResp)
}

